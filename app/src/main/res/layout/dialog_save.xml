<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#ff525252" >

    <TextView
        android:textColor="#ffffffff"
        android:id="@+id/dialog_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:text="@string/dialog_content_text"/>

    <EditText
        android:textColor="#ffffffff"
        android:layout_below="@+id/dialog_content_text"
        android:id="@+id/enter_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>
    <Button
        android:background="#ff797979"
        android:id="@+id/save_button"
        android:text="@string/save_button"
        android:textColor="#ffffffff"
        android:layout_below="@+id/enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="#ff797979"
        android:id="@+id/cancel_button"
        android:text="@string/cancel_button"
        android:textColor="#ffffffff"
        android:layout_alignRight="@id/enter_name"
        android:layout_below="@+id/enter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>